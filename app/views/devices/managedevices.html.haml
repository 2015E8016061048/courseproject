-#  This file is app/views/devices/index.html.haml

%h1 教学设备管理
%table#devices
  %thead
    %tr
     
      %th 设备名称
      %th 设备类型
      %th 详细信息
      %th 所属部门
      %th 设备状态
      
      %th 修改设备信息
      %th 删除设备信息
  %tbody
    - @devices.each do |device|
      %tr
        
        %td= link_to "#{device.name}", device_path(device)
        %td= device.kind
        %td= device.description
        %td= device.department
        %td= device.statement
        %td= link_to "修改", edit_device_path(device)
        %td= link_to '删除', device_path(device), :method => :delete, :confirm => 'Are you sure?'
%p
= link_to '添加设备', new_device_path
%p= link_to '返回管理员页面',"/manage"